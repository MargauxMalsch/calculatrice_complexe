<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1pt"
        android:layout_weight="1"
        android:background="#CB9CD8"
        android:ems="10"
        android:gravity="right|center"
        android:inputType="textPersonName"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="20pt" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1pt">

            <Button
                android:id="@+id/button7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="#F12FA9"
                android:backgroundTint="#F12FA9"
                android:onClick="calcul"
                android:text="7"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/button8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:onClick="calcul"
                android:text="8"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/button9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:onClick="calcul"
                android:text="9"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/diviser"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:onClick="calculoperator"
                android:text="/"
                android:textColor="@color/white" />
        </TableRow>


    </TableLayout>

    <TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1pt">

            <Button
                android:id="@+id/button4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:onClick="calcul"
                android:text="4"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/button5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:onClick="calcul"
                android:text="5"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/button6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:onClick="calcul"
                android:text="6"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/multiplier"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:onClick="calculoperator"
                android:text="*"
                android:textColor="@color/white" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1pt">

            <Button
                android:id="@+id/button3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:onClick="calcul"
                android:text="3"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/button2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:onClick="calcul"
                android:text="2"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/button1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:onClick="calcul"
                android:text="1"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/plus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:onClick="calculoperator"
                android:text="+"
                android:textColor="@color/white" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1pt">

            <Button
                android:id="@+id/buttonPourcentage"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:onClick="calculpourcent"
                android:text="%"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/button0"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:onClick="calcul"
                android:text="0"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/buttonPoint"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:onClick="calcul"
                android:text="."
                android:textColor="@color/white" />

            <Button
                android:id="@+id/moins"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:onClick="calculoperator"
                android:text="-"
                android:textColor="@color/white" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="30pt"
                android:layout_margin="3dp"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:onClick="clearEvent"
                android:text="C"
                android:textColor="@color/white"></Button>

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#E91E63"
                android:backgroundTint="#9C27B0"
                android:onClick="egal"
                android:text="="
                android:textColor="@color/white"></Button>
        </TableRow>
    </TableLayout>
</LinearLayout>
